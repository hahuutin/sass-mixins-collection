{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "jquery": true
  },
  "rules": {
    /**
     * Strict mode
     */
    "strict": [2,  "safe"],

    /**
     * Possible errors
     */
    "no-alert": 1,
    "comma-dangle": [2, "never"],

    /**
     * Best practices
     */
    "eqeqeq": 2,
    "curly": 2,
    "guard-for-in": 2,
    "default-case": 2,
    "no-magic-numbers": [2, {
      "ignore": [1, 0]
    }],
    "no-multi-spaces": 2,
    "no-eq-null": 2,
    "no-self-compare": 2,
    "block-scoped-var": 2,

    /*
     * Stylistic Issues
     */
    "array-bracket-spacing": [2, "never"],
    "brace-style": [2, "1tbs", {
      "allowSingleLine": true
    }],
    "camelcase": 2,
    "capitalized-comments": [2, "always", {
      "ignoreConsecutiveComments": true
    }],
    "indent": [2, 2],
    "quotes": [2, "single"],
    "comma-spacing": [2, {
      "before": false,
      "after": true
    }],
    "comma-style": [2, "last"],
    "key-spacing": [2, {
      "beforeColon": false,
      "afterColon": true
    }],
    "new-cap": [2, {
      "newIsCap": true
    }],
    "no-multiple-empty-lines": [2, {
      "max": 2
    }],
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "one-var": [2, "never"],
    "padded-blocks": [2, "never"],
    "semi": [2, "always"],
    "semi-spacing": [2, {
      "before": false,
      "after": true
    }],
    "keyword-spacing": 2,
    "space-before-blocks": 2,
    "space-before-function-paren": [2, "never"],
    "space-infix-ops": 2
  }
}
